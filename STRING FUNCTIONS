SELECT CONCAT(FirstName,' ', LastName)
FROM Person.Person

SELECT UPPER(FirstName), LOWER(LastName)
FROM Person.Person

SELECT LEN(FirstName)     -- CONTAGEM DE CARACTERES DA PALAVRA
FROM Person.Person

SELECT FirstName, SUBSTRING(FirstName, 1,3)    -- COM SUBSTRING PEGAR PARTES DE UMA PALAVRA
FROM Person.Person

SELECT ProductNumber, REPLACE(ProductNumber,'-','#')
FROM Production.Product


